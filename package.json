{
  "name": "saciut",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "npx concurrently -c=\"#5FA04E,#646CFF\" \"npm run dev:server\" \"npm run dev:vite\" --names=server,vite --kill-others",
    "dev:server": "tsdown --watch --logLevel silent --on-success \"cross-env NODE_ENV=development node --env-file-if-exists=.env ./dist/main.js\"",
    "dev:vite": "vite dev",
    "gen:openapi": "tsdown --entry ./src/generate-openapi.ts --on-success \"node ./dist/generate-openapi.js\"",
    "format": "prettier --check . --cache --cache-location .cache/prettier",
    "format:fix": "prettier --check . --write --cache --cache-location .cache/prettier",
    "lint": "eslint . --cache --cache-location .cache/eslint",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/eslint",
    "start": "cross-env NODE_ENV=production node --env-file-if-exists=.env ./dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@scalar/express-api-reference": "^0.8.15",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "jose": "^6.0.13",
    "lucide-react": "^0.541.0",
    "morgan": "^1.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.1",
    "zod-openapi": "^5.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@tailwindcss/vite": "^4.1.12",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint-plugin-import": "^2.32.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "tsdown": "^0.14.1",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  }
}
