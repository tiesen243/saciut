{
  "name": "saciut",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "bun run --env-file=.env --hot src/main.ts",
    "format": "prettier --check . --cache --cache-location .cache/prettier",
    "format:fix": "prettier --check . --write --cache --cache-location .cache/prettier",
    "lint": "eslint . --cache --cache-location .cache/eslint",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/eslint",
    "start": "node --env-file-if-exists=.env ./dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.4",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jose": "^6.0.13",
    "morgan": "^1.10.1",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.4",
    "eslint-plugin-import": "^2.32.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
